@page
@model hello2.Pages_Movies.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.ID" />
            <div class="form-group">
                <label asp-for="Movie.Titulo" class="control-label"></label>
                <input asp-for="Movie.Titulo" class="form-control" />
                <span asp-validation-for="Movie.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Genero" class="control-label"></label>
                <input asp-for="Movie.Genero" class="form-control" />
                <span asp-validation-for="Movie.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Precio" class="control-label"></label>
                <input asp-for="Movie.Precio" class="form-control" />
                <span asp-validation-for="Movie.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
